<% unless current_user == @user %>
  <div>
  <% if current_user.friend?(@user) %>
    <%= render 'unfriend_form' %>
  <% elsif current_user.pending_requested?(@user) %>
    <%= render 'cancel_form' %>
  <% elsif current_user.pending_requested_from?(@user) %>
    <%= render 'accept_form' %>
  <% else %>
    <%= render 'friend_form' %>
  <% end %>
  </div>
<% end %>